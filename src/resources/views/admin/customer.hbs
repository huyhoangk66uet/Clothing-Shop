<!DOCTYPE html>
<html lang="en">

{{> head-admin}}

<body>
    {{> header-admin}}
    <div class="content-wrapper">
        <div class="content-header">
            <div class="content-header-left">
                <i class="fa-solid fa-circle-right"></i><span>Khách hàng</span>
            </div>
        </div>
        <div class="content">
            <table id="example">
                <thead>
                    <tr>
                        <th style="width: 5vw;">STT</th>
                        <th style="width: 20vw">Tên khách hàng</th>
                        <th style="width: 20vw">Email</th>
                        <th style="width: 10vw">SĐT</th>
                        <th style="width: 10vw">Địa chỉ</th>
                        <th style="width: 15vw">Thay đổi</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <th>{{sum @index 1}}</th>
                        <th><img src="" alt="">{{this.name}}</th>
                        <th>{{this.email}}</th>
                        <th>{{this.phone_number}}</th>
                        <th>{{this.address}}</th>
                        <th>
                            <button class="btn btn-delete" user_id="{{this._id}}" onclick="removeUser(event)">Xóa</button>
                        </th>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    
    <div class="modal hide" id="confirm-delete">
        <div class="modal-header">
            <i class="fa-solid fa-triangle-exclamation"></i>
            <span>Xóa khách hàng</span>
        </div>
        <div class="modal-body">
            <span>Bạn có chắc chắn muốn xóa khách hàng này?</span>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default" id="cancel" data-dismiss="modal">Hủy</button>
            <button type="button" class="btn btn-danger" id="confirm" data-dismiss="modal">Xóa</button>
        </div>
    </div>
    
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.16/js/jquery.dataTables.min.js"></script>
    <script src="/js/admin.js"></script>
</body>

</html>