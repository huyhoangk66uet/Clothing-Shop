    <!-- Show/Hide popup -->
    <script>
        const submitBtns = document.querySelectorAll('.submit-button')
        const popup = document.querySelector('.js-popup')
        const popupContainer = document.querySelector('.js-popup-container')
        // const popupClose = document.querySelector('.js-popup-close')
        function showBuyTickets() {
            popup.classList.add('open')
        }
        function hideBuyTickets() {
            popup.classList.remove('open')
        }

        for (const buyBtn of submitBtns) {
            buyBtn.addEventListener('click',showBuyTickets)
        }
        // popupClose.addEventListener('click', hideBuyTickets)
        popup.addEventListener('click', hideBuyTickets)
        popupContainer.addEventListener('click', function (event) {
            event.stopPropagation()
        })
    </script>

    <!-- Choose gender -->
    <script>
        const radioBtns = document.querySelectorAll(".radio")
        function setAllAriaCheck(btns) {
            for (const btn of btns) {
                btn.setAttribute('aria-checked', 'false')
            }
        }
        function setAriaCheck(radio, radioList) {
             return function() {
                // console.log("ok")
                setAllAriaCheck(radioList)
                radio.setAttribute('aria-checked', 'true')
            }
        }   
        for (const radioBtn of radioBtns) {
            radioBtn.addEventListener('click', setAriaCheck(radioBtn, radioBtns))
        }
    </script>

    <!-- Load body -->
    <script>
        function loadBody(path) {
            return function() {
                var xhr = new XMLHttpRequest();
                xhr.open("GET", path, true);
                xhr.onreadystatechange = function() {
                    if (xhr.readyState == XMLHttpRequest.DONE && xhr.status == 200) {
                        document.getElementById("detail-name").innerHTML = xhr.responseText;
                    }
                    xhr.send();
                }
            }
        }
    </script>

